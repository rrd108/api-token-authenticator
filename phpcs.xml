<?xml version="1.0"?>
<ruleset name="API Token Authenticator">
  <description>Coding standard for API Token Authenticator plugin</description>

  <!-- Use PSR12 as base -->
  <rule ref="PSR12">
    <!-- Allow long lines for readability -->
    <exclude name="Generic.Files.LineLength"/>
  </rule>

  <!-- Check src and tests directories -->
  <file>src</file>
  <file>tests</file>

  <!-- Exclude side effects warning for test bootstrap files -->
  <rule ref="PSR1.Files.SideEffects">
    <exclude-pattern>tests/bootstrap.php</exclude-pattern>
  </rule>

  <!-- Show progress -->
  <arg value="p"/>
</ruleset>
